<main id="main" class="main">

    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item active"><a>Blog</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="card">
            <div class="card-body">
                <!-- Table with hoverable rows -->
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Details</th>
                            <th scope="col">Image</th>
                            <th scope="col">Slug</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <th scope="row">{{$}}</th>
                            <td>{{title}}</td>
                            <td>{{details}}</td>
                            <td>
                                <img src="/{{image}}" width="60px" alt="{{title}}">
                            </td>
                            <td>{{slug}}</td>
                            <td>
                                <a href="/admin/blog/{{id}}/show" class="btn btn-outline-info btn-sm">Show</a>
                                <a href="/admin/blog/{{id}}/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                                <form action="/admin/blog/{{id}}/delete" method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <!-- End Table with hoverable rows -->
                <a href="/admin/blog/create" class="btn btn-outline-success btn-sm">Data Create</a>

            </div>
        </div>
    </section>

</main><!-- End #main -->