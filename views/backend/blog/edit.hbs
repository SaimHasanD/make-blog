<main id="main" class="main">

    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                <li class="breadcrumb-item"><a href="/admin/blog">Blog</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Floating Labels Form -->
                    <form class="row g-3 my-3" method="post" action="/admin/blog/{{blog.id}}/update" encType="multipart/form-data">
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input value="{{blog.title}}" type="text" class="form-control" placeholder="Title"
                                    name="title">
                                <label>Title</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea type="text" class="form-control" placeholder="Details" style="height: 100px;"
                                    name="details">{{blog.details}}</textarea>
                                <label>Details</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <img src="/{{blog.image}}" width="200px" alt="{{blog.title}}">
                                <input type="file" class="form-control" name="image">
                                <label>Image</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-floating">
                                <input type="text" value="{{blog.slug}}" class="form-control" placeholder="Slug"
                                    name="slug">
                                <label>Slug</label>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End floating Labels Form -->

                </div>
            </div>

        </div>
    </section>

</main><!-- End #main -->